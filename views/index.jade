doctype html
html
  //-
      JS Namespace:
        cfg 

  head
    title= cfg.title
    link(rel='stylesheet', href='/css/video-app.css')

    //-link(href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet" type="text/css")
    link(href="/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css")

    link(href="/css/video-app.css" rel="stylesheet" type="text/css")

  body
    h1= cfg.title
    p Welcome to #{cfg.title}

    hr

    div#fileSelect

    hr

    div#videoStuff


    //-script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js", type="text/javascript")
    script(src="/js/jquery.js", type="text/javascript")
    script(src="/js/lodash.js", type="text/javascript")

    - var cfg_json_str = JSON.stringify(cfg)

    script(src="/js/video-app.js", type="text/javascript")
    script.
      $(document).ready(function(){
        console.log("What WAS the VIDEO_APP.init() function:")
        var videoApp = new VideoApp(!{cfg_json_str})
        $('#fileSelect').append( videoApp.fileBrowser.$dom )
        $('#videoStuff').append( videoApp.videoContents.$dom )
        videoApp.fileBrowser.$rootSelect.focus()
      })

