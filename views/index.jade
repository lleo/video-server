doctype html
html
  //-
      JS Namespace:
        cfg 
        cfg_json_str

  head
    title= cfg.title
    link(rel='stylesheet', href='/css/video-app.css')

    //-link(href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet" type="text/css")
    link(href="/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css")

    //-script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js", type="text/javascript")
    script(src="/js/jquery-2.1.4.js", type="text/javascript")

    script(src="/js/video-app.js", type="text/javascript")
    script.
      VIDEO_APP.init(#{cfg_json_str})

  body
    h1= cfg.title
    p Welcome to #{cfg.title}
    //-i.fa.fa-spinner.fa-pulse.fa-3x

    hr

    textarea(rows=20 cols=80).
      #{cfg_json_str}

    hr

    - var len = cfg['video directories'].length
    - var dirs = cfg["video directories"]

    select(id='topDirSelect', size=len)
      each ent in dirs
        option(id=ent.id)= ent.name
